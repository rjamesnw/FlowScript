// FlowScript Core
{
  "extends": "../../tsconfig-base.json",
  "references": [
    { "path": "Runtime" }
  ],
  "compilerOptions": {
    "composite": true,
    "target": "es6", // (Makes sure we take advantage of Node's built-in async functionality.)
    "outFile": "../../wwwroot/js/flowscript.js",
    "declaration": true
  },
  "files": [
    "EventDispatcher.ts",
    "NamespaceObject.ts",
    "NamedReference.ts",
    "User.ts",
    "FileManager.ts",
    "FlowScriptMain.ts",
    "Expressions.ts",
    "Property.ts",
    "Component.ts",
    "Statement.ts",
    "Block.ts",
    "Line.ts",
    "Enum.ts",
    "Event.ts",
    "Message.ts",
    "Table.ts",
    "Thread.ts",
    "Components/Core.ts",
    "Components/Core.HTTPRequest.ts",
    "Components/Core.ControlFlow.ts",
    "Components/Core.Math.ts",
    "Components/Core.Binary.ts",
    "Components/Core.Comparison.ts",
    "Components/Core.DOM.ts",
    "Components/Core.HTML.ts",
    "Compiler.ts",
    "Simulator.ts",
    "Visualtree.ts",
    "Views.ts",
    "Projects.ts",
    "System.ts",
    "bootup.ts" // This MUST be LAST.
  ],
  "exclude": [
    "node_modules"
  ]
}
