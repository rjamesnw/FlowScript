    "version": "2.0.0",
    "tasks": [
        {
            "label": "FlowScript Build",
            "type": "typescript",
            "tsconfig": "Source\\ide\\flowscript\\tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "Server Build",
            "type": "typescript",
            "tsconfig": "Source\\ide\\server\\tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "Client Build",
            "type": "typescript",
            "tsconfig": "Source\\ide\\scripts\\tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "Build All",
            "dependsOn": [
                "FlowScript Build",
                "Server Build",
                "Client Build"
            ]
        },
        {
            "label": "Build Server",
            "dependsOn": [
                "Server Build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build Client",
            "dependsOn": [
                "FlowScript Build",
                "Client Build"
            ],
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "Build All",
            "dependsOn": [
                "FlowScript Build",
                "Server Build",
                "Client Build"
            ]
        },
        {
            "label": "FlowScript Watch",
            "type": "typescript",
            "tsconfig": "Source\\ide\\flowscript\\tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ]
        },
        {
            "label": "Server Watch",
            "type": "typescript",
            "tsconfig": "Source\\ide\\server\\tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ]
        },
        {
            "label": "Client Watch",
            "type": "typescript",
            "tsconfig": "Source\\ide\\scripts\\tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ]
        },
        {
            "label": "Watch All",
            "dependsOn": [
                "FlowScript Watch",
                "Server Watch",
                "Client Watch"
            ],
            "problemMatcher": [
                "$tsc-watch"
            ],
            "isBackground": true
        }
    ]
}